<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:text="@string/testsDescription"/>
    
    <ToggleButton
        android:id="@+id/button_gyro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_marginTop="60dp"
        android:textOn="Gyroscope on"
    	android:textOff="Gyroscope off"
    	android:onClick="onToggleClicked_gyro"/>
    
    <ToggleButton 
        android:id="@+id/button_accel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_marginTop="65dp"
        android:textOn="Accelerometer on"
    	android:textOff="Accelerometer off"
    	android:onClick="onToggleClicked_accel"/>
    
    <TextView 
        android:id="@+id/textView_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_marginTop="80dp"/>

</LinearLayout>
